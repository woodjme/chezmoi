{{- $email := promptStringOnce . "email" "Git email address" -}}
{{- $name := "Jamie Wood" -}}
{{- $install1Password := promptBoolOnce . "install1Password" "Install 1Password for SSH keys (installs first, will pause for setup) (y/n)" -}}
{{- $useCommitSigning := promptBoolOnce . "useCommitSigning" "Enable git commit signing (y/n)" -}}
{{- $use1PasswordSign := false -}}
{{- $signingkey := "" -}}
{{- if $useCommitSigning -}}
{{- if $install1Password -}}
{{- $use1PasswordSign = promptBoolOnce . "use1PasswordSign" "Use 1Password for git commit signing (y/n)" -}}
{{- end -}}
{{- $defaultSigningKey := "ssh-rsa " -}}
{{- $signingkey = promptStringOnce . "signingkey" "Git SSH signing key (press Enter for default)" $defaultSigningKey -}}
{{- end -}}
{{- $installDesktopApps := promptBoolOnce . "installDesktopApps" "Install desktop apps (browsers, etc) (y/n)" -}}
{{- $useNvimSSH := promptBoolOnce . "useNvimSSH" "Clone nvim config via SSH (needs SSH keys configured) (y/n)" -}}

[data]
    email = {{ $email | quote }}
    name = {{ $name | quote }}
    install1Password = {{ $install1Password }}
    useCommitSigning = {{ $useCommitSigning }}
    signingkey = {{ $signingkey | quote }}
    use1PasswordSign = {{ $use1PasswordSign }}
    installDesktopApps = {{ $installDesktopApps }}
    useNvimSSH = {{ $useNvimSSH }}
