{{- $email := promptStringOnce . "email" "Git email address" -}}
{{- $name := "Jamie Wood" -}}
{{- $defaultSigningKey := "ssh-rsa " -}}
{{- $signingkey := promptStringOnce . "signingkey" "Git SSH signing key (press Enter for default)" $defaultSigningKey -}}

[data]
    email = {{ $email | quote }}
    name = {{ $name | quote }}
    signingkey = {{ $signingkey | quote }}
